<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5DAFF"
    android:gravity="center_vertical"
    tools:context=".BookingHistoryActivity">

    <TextView
        android:id="@+id/Bookinghistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:text="Booking History"
        android:textColor="#045595"
        android:textColorHighlight="#0A79AB"
        android:textSize="30dp"
        android:textStyle="normal|bold|italic" />


    <TextView
        android:id="@+id/rname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="sans-serif"
        android:text=" Room Name"
        android:textColor="@color/black"
        android:textColorHighlight="#0A79AB"
        android:textSize="20dp"
        android:textStyle="normal|bold|italic"
        android:layout_below="@+id/Bookinghistory"/>

    <TextView
        android:id="@+id/date1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rname"
        android:layout_margin="20dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif"
        android:text="Check-in-Date"
        android:textColor="@color/black"
        android:textColorHighlight="#0A79AB"
        android:textSize="20dp"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:id="@+id/date2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:text="Check-out-Date"
        android:textColor="@color/black"
        android:textColorHighlight="#0A79AB"
        android:textSize="20dp"
        android:textStyle="normal|bold|italic"
        android:layout_below="@id/date1"/>

    <TextView
        android:id="@+id/reservename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:text="User Name"
        android:textColor="@color/black"
        android:textColorHighlight="#0A79AB"
        android:textSize="20dp"
        android:textStyle="normal|bold|italic"
        android:layout_below="@id/date2"/>

    <Button
        android:id="@+id/Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/reservename"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/fetch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fetch Data"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Home"
        android:layout_margin="20dp"/>


</RelativeLayout>